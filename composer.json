{
    "name": "jasonmccreary/pspec",
    "description": "PSpec is a modern, BDD-style testing framework for PHP.",
    "keywords": ["bdd", "tdd", "test", "framework"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jasonmccreary/pspec/issues",
        "source": "https://github.com/jasonmccreary/pspec"
    },
    "authors": [
        {
            "name": "Jason McCreary",
            "email": "jason@pureconcepts.net"
        }
    ],
    "bin" : [ "bin/pspec" ],
    "require": {
        "php": ">=5.5",
        "symfony/console": "^3.1",
        "jasonmccreary/expect": "1.*"
    },
    "autoload" : {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "PSpec\\": "src"
        }
    }
}
